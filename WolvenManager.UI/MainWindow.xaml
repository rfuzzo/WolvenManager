<adonisControls:AdonisWindow 
    x:Class="WolvenManager.UI.MainWindow"
    
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:reactiveui="http://reactiveui.net"
    
    Title="{Binding Title}"
    Height="600" Width="1000"
    MinHeight="450" MinWidth="800"
    mc:Ignorable="d"
    xmlns:adonisControls="clr-namespace:AdonisUI.Controls;assembly=AdonisUI"
    xmlns:viewModels="clr-namespace:WolvenManager.App.ViewModels;assembly=WolvenManager.App"

    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:constants="clr-namespace:WolvenManager.App;assembly=WolvenManager.App"
    xmlns:hc="https://handyorg.github.io/handycontrol"
    d:DataContext="{d:DesignInstance Type=viewModels:AppViewModel}"

    >

    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>

    <Grid>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="25"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
            

                <!-- Sidebar -->
                <GroupBox Grid.Column="0"
                          Padding="0">



                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="*"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>


                        <Border Height="{Binding Path=TitleBarActualHeight, RelativeSource={RelativeSource AncestorType={x:Type adonisControls:AdonisWindow}}}" />

                        <!-- Upper Buttons -->
                        <StackPanel Grid.Row="0">
                            <Button x:Name="MainButton" CommandParameter="{x:Static constants:Constants+RoutingIDs.Main }" Height="Auto">
                                <Button.Content>
                                    <iconPacks:PackIconCodicons Kind="Package"
                                                                Width="40"
                                                                Height="40"
                                                                Padding="5"/>
                                </Button.Content>

                            </Button>
                            <!--<Button x:Name="ExtensionsButton"  CommandParameter="{x:Static constants:Constants+RoutingIDs.Extensions }" Height="Auto">
                                <Button.Content>
                                    <iconPacks:PackIconCodicons Kind="Extensions"
                                                                Width="40"
                                                                Height="40"
                                                                Padding="5"/>
                                </Button.Content>

                            </Button>

                            <Button x:Name="LibraryButton"  CommandParameter="{x:Static constants:Constants+RoutingIDs.Library }" Height="Auto" >
                                <Button.Content>
                                    <iconPacks:PackIconCodicons Kind="Library"
                                                                Width="40"
                                                                Height="40"
                                                                Padding="5"/>
                                </Button.Content>

                            </Button>-->

                        </StackPanel>


                        <!-- Lower Buttons -->
                        <StackPanel Grid.Row="2">

                            <Button x:Name="SettingsButton"  Height="Auto" >
                                <Button.Content>
                                    <iconPacks:PackIconCodicons Kind="SettingsGear"
                                                                Width="40"
                                                                Height="40"
                                                                Padding="5"/>
                                </Button.Content>
                            </Button>

                        </StackPanel>
                        




                    </Grid>
                </GroupBox>

                <!-- Pages -->
                <reactiveui:RoutedViewHost Grid.Column="1" 
                                           x:Name="RoutedViewHost"
                                           HorizontalContentAlignment="Stretch"
                                           VerticalContentAlignment="Stretch" />


            </Grid>

            <StatusBar Grid.Row="1" Background="DodgerBlue">

            </StatusBar>
        </Grid>

        <Canvas x:Name="Overlay" />

        <ScrollViewer   
            VerticalScrollBarVisibility="Hidden" 
            HorizontalAlignment="Right">
            <StackPanel hc:Growl.GrowlParent="True" VerticalAlignment="Top" Margin="0,10,10,10"/>
        </ScrollViewer>
    </Grid>
</adonisControls:AdonisWindow>