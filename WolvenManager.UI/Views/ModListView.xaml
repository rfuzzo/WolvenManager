<reactiveUi:ReactiveUserControl x:TypeArguments="pageViewModels:ModListViewModel" 
                                x:Class="WolvenManager.UI.Views.ModListView"
                                xmlns:viewModels="clr-namespace:WolvenManager.App.ViewModels;assembly=WolvenManager.App"
                                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                                xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                                xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                                xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                                xmlns:local="clr-namespace:WolvenManager.UI.Views"
                                xmlns:reactiveUi="http://reactiveui.net"
                                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
                                xmlns:Syncfusion="http://schemas.syncfusion.com/wpf"
                                xmlns:pageViewModels="clr-namespace:WolvenManager.App.ViewModels.PageViewModels;assembly=WolvenManager.App"
                                d:DataContext="{d:DesignInstance Type=pageViewModels:ModListViewModel}"
                                mc:Ignorable="d" 
                                d:DesignHeight="450" d:DesignWidth="800"
                                >
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <GroupBox Grid.Row="0">
            <Grid >
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" x:Name="InstallModButton">
                    <Button.Content>
                        <StackPanel Orientation="Horizontal">
                            <iconPacks:BootstrapIcons Kind="Download"
                                                      Width="40"
                                                      Height="40"
                            />
                            <TextBlock Text="Install Mod" 
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center" 
                                       FontSize="25" Padding="15,0,0,0"/>
                        </StackPanel>
                    </Button.Content>
                </Button>


            </Grid>

        </GroupBox>

        <Syncfusion:SfDataGrid Grid.Row="1" x:Name="ModList"
                               AllowSorting="True"
                               AllowFiltering="True"
                               AllowResizingColumns="True"
                               ColumnSizer="Star"
                               AllowEditing="True"
                               Padding="5"
                               >

        </Syncfusion:SfDataGrid>

    </Grid>
</reactiveUi:ReactiveUserControl>
