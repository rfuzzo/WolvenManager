  <ItemGroup>
    <ProjectReference Include="..\WolvenManager.App\WolvenManager.App.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Views\SettingsView - Copy.xaml.cs">
      <SubType>Code</SubType>
